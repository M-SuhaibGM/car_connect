generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // e.g. mongodb+srv://user:pass@cluster/dbname
}

model Car {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  driverId       String
  driverName     String
  rego           String
  carModel       String
  rentPerWeek    Float?
  receipt        String?
  rentedDate     String?
  amountReceiver Float?
  expense        Float?
  carNumber      String
  rented         Boolean
  description    String?
  createdAt      DateTime @default(now())
}

model Drivers {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  phoneNumber String?
  idNumber    String?
  adress      String?
}
